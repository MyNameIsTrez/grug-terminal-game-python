{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile grug.so",
            "command": "gcc",
            "type": "shell",
            "args": [
                "grug/grug.c",
                "-o",
                "grug/grug.so",
                "-shared",
                "-fPIC",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wpedantic",
                "-Wfatal-errors",
                "-g",
                "-rdynamic",
                // "-fsanitize=address,undefined",
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "group": "build"
        },
        {
            "label": "Compile adapter.so",
            "command": "gcc",
            "type": "shell",
            "args": [
                "adapter.c",
                "-o",
                "adapter.so",
                "-shared",
                "-fPIC",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wpedantic",
                "-Wfatal-errors",
                "-g",
                // "-fsanitize=address,undefined",
                // Generate the below strings using `python3-config --includes --ldflags`
                // It's explained here: https://www.linuxjournal.com/article/8497
                "-lpython3.13",
                "-I/home/trez/.pyenv/versions/3.13.0/include/python3.13",
                "-L/home/trez/.pyenv/versions/3.13.0/lib",
                "-ldl",
                "-Wl,-rpath,/home/trez/.pyenv/versions/3.13.0/lib",
                "-lm",
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "group": "build"
        }
    ]
}
