uses: i32 = 0

on_spawn() {
    set_tool_name("Lightning")
    set_tool_buy_gold_value(70)
}

on_use() {
    uses = uses + 1

    damage: i32 = 20

    # Critical hit
    if uses == 2 {
        damage = 30
        uses = 0
    }

    helper_apply_damage(damage)
}

helper_apply_damage(damage: i32) {
    parent: Human = get_human_parent(me)
    opponent: Human = get_opponent(parent)
    change_human_health(opponent, -damage)
}
